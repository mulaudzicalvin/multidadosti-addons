<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project.action_view_task" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph</field>
        <field name="context">{'search_default_Stage': 1}</field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
    </record>
    
    <record model="ir.ui.view" id="task_search_custom_view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='name']" position="attributes">
                <attribute name="filter_domain">['|', '|', '|', ('name', 'ilike', self), ('description', 'ilike', self),
                    ('message_ids.body', 'ilike', self), ('code', 'ilike', self)]
                </attribute>
            </xpath>
            <xpath expr="//search/field[@name='name']" position="after">
                <field name="name" string="Name"/>
            </xpath>
        </field>
    </record>

</odoo>